@model SIGD.Models.Demanda

@{
    ViewData["Title"] = "Details";
}
<style>
    .text-left {
        height: 0px;
        margin-left: 150px;
    }

</style>

<div class="text-left">

    <h4>Detalhes da Demanda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           TITULO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class = "col-sm-2">
           DESCRIÇÃO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class = "col-sm-2">
            STATUS:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
            DATA DE CADASTRATO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtCadastro)
        </dd>
        <dt class = "col-sm-2">
            PRAZO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prazo)
        </dd>
        <dt class = "col-sm-2">
            DEMANDANTE:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Demandante)
        </dd>
        <dt class = "col-sm-2">
           PROGRAMADOR
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Programador)
        </dd>
        <dt class = "col-sm-2">
           OBSERVAÇÃO:  
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>


    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm ">Excluir</a>

    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>



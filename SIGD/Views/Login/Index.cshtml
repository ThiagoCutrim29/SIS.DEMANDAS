@model LoginModel
@{
    Layout = "Layout_deslogada";
    ViewData["Title"] = "Login";

}
<style>
    .text-left {
        height: 0px;
        margin-left: 150px;
    }
</style>


<div class="text-left">
    
  <div class="text-center">
      <br/>
        <h2><p> SISTEMA DE GERENCIAMENTO DE DEMANDAS</p></h2>

  </div>
    

    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    
                    
                    <form asp-controller="Login" asp-action="Entrar" method="post">


                        <div class="form-outline mb-4">
                            <input type="text" asp-for="Cpf" id="cpfInput" class="form-control form-control-lg"
                                   placeholder="Digite Seu Cpf" />
                            <label class="form-label" for="Cpf"></label>
                            @Html.ValidationMessageFor(x => x.Cpf)
                        </div>

                       

                   
                        <div class="form-outline mb-3">
                            <input type="password" asp-for="Password"  class="form-control form-control-lg"
                                   placeholder="Digite Sua senha" />
                            <label class="form-label" for="Password"></label>
                            @Html.ValidationMessageFor(x=>x.Password)
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Remember me
                                </label>
                            </div>
                            <a href="#!" class="text-body">Esqueceu a Senha?</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                               Entrar
                            </button>
                            
                        </div>

                    </form>

                    <script>
                        document.getElementById('cpfInput').addEventListener('input', function (e) {
                            var cpf = e.target.value.replace(/\D/g, ''); // Remove caracteres não numéricos
                            if (cpf.length === 11) {
                                cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4'); // Formata CPF
                                e.target.value = cpf;
                            }
                        });
                    </script>
                </div>
            </div>
        </div>
        
    </section>
 </div>
    